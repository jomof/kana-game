{
  "name": "kana-control",
  "private": false,
  "version": "0.0.9",
  "description": "Japanese IME web component (romajiâ†’kana via WanaKana)",
  "main": "kana-control.js",
  "module": "kana-control.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf kana-control.{d.ts,d.ts.map,js,js.map} kana-control-logic.{d.ts,d.ts.map,js,js.map} augment.{d.ts,d.ts.map,js,js.map} tokenize.{d.ts,d.ts.map,js,js.map} test/kana-control_test.{d.ts,d.ts.map,js,js.map} test/kana-control-logic_test.{d.ts,d.ts.map,js,js.map}",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "docs": "npm run docs:clean && npm run build && npm run analyze && npm run docs:build && npm run docs:assets && npm run docs:gen",
    "pretest": "npm run build",
    "docs:clean": "rimraf docs",
    "docs:gen": "eleventy --config=.eleventy.cjs",
    "docs:gen:watch": "eleventy --config=.eleventy.cjs --watch",
    "docs:build": "rollup -c --file docs/kana-control.bundled.js",
    "docs:assets": "cp node_modules/prismjs/themes/prism-okaidia.css docs/",
    "docs:serve": "wds --root-dir=docs --node-resolve --watch",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --watch",
    "serve:prod": "MODE=prod npm run serve",
    "test": "npm run test:unit && npm run test:dev && npm run test:prod",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch",
    "test:unit": "mocha test/kana-control-logic_test.js test/tokenize_test.js test/augment_test.js --ui tdd",
    "test:mutation": "npm run build && (stryker run || node scripts/show-next-survivor.js)",
    "test:integration": "wtr",
    "checksize": "rollup -c ; cat kana-control.bundled.js | gzip -9 | wc -c ; rm kana-control.bundled.js",
    "push-version": "npm version patch && git push --follow-tags",
    "prepublishOnly": "npm run build && npm test && npm run analyze"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@patdx/kuromoji": "^1.0.4",
    "lit": "^3.2.0",
    "wanakana": "^5.3.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/mocha-runner": "^9.4.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-legacy": "^1.0.0",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "chai": "^6.2.1",
    "eslint": "^8.57.0",
    "lit-analyzer": "^2.0.3",
    "mocha": "^11.7.5",
    "prettier": "^2.6.2",
    "rimraf": "^6.1.2",
    "rollup": "^4.18.0",
    "rollup-plugin-summary": "^2.0.1",
    "sinon": "^21.0.0",
    "typescript": "~5.9.0"
  },
  "customElements": "custom-elements.json",
  "files": [
    "kana-control.js",
    "kana-control.d.ts",
    "kana-control-logic.js",
    "kana-control-logic.d.ts",
    "augment.js",
    "augment.d.ts",
    "tokenize.js",
    "tokenize.d.ts",
    "custom-elements.json",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": "./kana-control.js",
    "./kana-control-logic": "./kana-control-logic.js",
    "./augment": "./augment.js",
    "./tokenize": "./tokenize.js"
  }
}
